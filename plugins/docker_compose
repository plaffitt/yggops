#!/usr/bin/env python3

import argparse
from utils import run

parser = argparse.ArgumentParser()
parser.add_argument('--env-file', help='.env')
args = parser.parse_args()

if args.env_file:
  run(['ln', '-sf', args.env_file, '.env'])

run('docker compose up -d --build --remove-orphans'.split(' '))
